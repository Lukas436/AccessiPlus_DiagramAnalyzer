{
  "manifest_version": 3,
  "name": "Accessi+ - Diagram Analyser",
  "version": "1.0",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["http://localhost:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Diagramm-Analyse"
  },
  "icons": 
    {
      "16": "bilder/icon.png",
      "32": "bilder/icon.png",
      "48": "bilder/icon.png",
      "128": "bilder/icon.png"
    },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["html2canvas.min.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}
